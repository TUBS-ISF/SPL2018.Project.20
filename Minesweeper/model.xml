<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<featureModel>
    <properties/>
    <struct>
        <and abstract="true" mandatory="true" name="Minesweeper">
            <description>
Model of Minesweeper game.
</description>
            <and mandatory="true" name="Base">
                <and mandatory="true" name="GameArena">
                    <alt mandatory="true" name="Size">
                        <feature name="SmallSize"/>
                        <feature name="MiddleSize"/>
                        <feature name="BigSize"/>
                    </alt>
                </and>
                <feature mandatory="true" name="Bombplacer"/>
                <and mandatory="true" name="Bombs">
                    <feature name="BombImage"/>
                </and>
                <alt mandatory="true" name="Solver">
                    <feature name="Recursive"/>
                    <feature name="Iterative"/>
                </alt>
            </and>
            <alt abstract="true" mandatory="true" name="View">
                <and abstract="true" name="GUI">
                    <and mandatory="true" name="MainWindow">
                        <feature mandatory="true" name="DisplayedGameField"/>
                        <feature name="Time"/>
                        <feature name="DisplayedScore"/>
                    </and>
                    <and name="ScoreWindow">
                        <feature mandatory="true" name="EndScore"/>
                        <feature name="ScoreList"/>
                        <feature name="CreateNewGame"/>
                        <feature name="CloseGame"/>
                    </and>
                    <and name="ChallangeWindow">
                        <feature name="CompletedChallenges"/>
                        <feature name="RunningChallenges"/>
                    </and>
                </and>
                <feature name="Console"/>
            </alt>
            <alt abstract="true" mandatory="true" name="Difficulty">
                <feature name="Easy"/>
                <feature name="Middle"/>
                <feature name="Hard"/>
            </alt>
            <alt name="Score">
                <feature name="TimeBasedScore"/>
                <feature name="WeightedScore"/>
            </alt>
            <or abstract="true" name="Challenges">
                <feature name="TimeBasedChallanges"/>
                <feature name="DifficultyChallanges"/>
            </or>
        </and>
    </struct>
    <constraints>
        <rule>
            <imp>
                <conj>
                    <var>Score</var>
                    <var>GUI</var>
                </conj>
                <conj>
                    <var>ScoreWindow</var>
                    <var>DisplayedScore</var>
                </conj>
            </imp>
        </rule>
        <rule>
            <imp>
                <conj>
                    <var>Challenges</var>
                    <var>GUI</var>
                </conj>
                <var>ChallangeWindow</var>
            </imp>
        </rule>
        <rule>
            <imp>
                <not>
                    <var>Challenges</var>
                </not>
                <not>
                    <var>ChallangeWindow</var>
                </not>
            </imp>
        </rule>
    </constraints>
    <calculations Auto="true" Constraints="true" Features="true" Redundant="true" Tautology="true"/>
    <comments/>
    <featureOrder userDefined="false"/>
</featureModel>
